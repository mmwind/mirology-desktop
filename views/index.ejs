<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
	<link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
	
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<style>
	body {
		background-color: #1b2838;
		color: #6f7983;
	}
	
	.article-title {
		color: #e0e0e0;
	}
	.main-title {
		color: #ffffff;
		margin-left: 20px;
	}
	
	<!-- Flex containers -->
  .my-flex-container {
    border: 2px solid #101822;
    height: auto;
    margin-bottom: 30px;
  }
  
  .my-flex-container-column {
    border: 2px solid gray;
    height: 200px;
    margin-bottom: 20px;
  }
   
  .my-flex-item-image {
    background-color: #101822;
    height: auto;
	width: 400px;
	overflow: hidden;
	background-position-y:0px;
	background-size: contain;
	background-repeat: no-repeat;
  }
  .my-flex-item-buttons {
    background-color: #101822;
    height: auto;
	width: 48px;
  }
  
  .my-flex-item-2 {
    background-color: #101822;
    height: auto;
	width: 100%;
  }
  span:hover {
    background: #202832; /* Цвет фона под ссылкой */ 
    color: #ffe; /* Цвет ссылки */ 
  }
  
  .downloading-buttons {
    -webkit-animation-name: downloading-anim; /* Safari 4.0 - 8.0 */
    -webkit-animation-duration: 4s; /* Safari 4.0 - 8.0 */
    animation-name: downloading-anim;
    animation-duration: 2s;
	animation-iteration-count: infinite;
  }
  
/* Safari 4.0 - 8.0 */
@-webkit-keyframes downloading-anim {
    0% {color: #202832;}
    50% {color: #dfb13a;}
	100% {color: #202832;}
}

/* Standard syntax */
@keyframes downloading-anim {
    0% {color: #202832;}
    50% {color: #dfb13a;}
	100% {color: #202832;}
}

  .downloaded-buttons {
	color: #dfb13a;
  }
  
</style>

</head>
<body>
<button id="close-window-button">X</button><br></br>
	<h1 class="main-title">Фантастическая мирология</h1>

 <% articles.forEach(function(article,idx){ %>
	<div class="d-flex flex-row my-flex-container" data-index="<%= idx %>">
		<div class="p-2 mr-auto my-flex-item-image" style="background-image: url('asset://images/<%= article.img %>');">
		</div>
		<div class="p-2 my-flex-item-2">
		<h2 class = "article-title"><%= article.name %></h2>
		<%= article.text %>
		</div>
		<div class=" p-2 ml-auto my-flex-item-buttons">
			 <div class="d-flex flex-column">
				<div class="p-2"><span class="glyphicon glyphicon-search"></span></div>
				<div id="ExploreButton" class="p-2"><span class="glyphicon glyphicon-folder-open"></span></div>
				<div id="DownloadButton" class="p-2"><span class="glyphicon glyphicon-download-alt"></span></div>
			</div>
		</div>
	</div>
  <% }); %>

  
	<script type="text/javascript" src="asset://js/renderer.js"></script>
	
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
	


</body>
</html>